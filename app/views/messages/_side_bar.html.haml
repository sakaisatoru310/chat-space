.side-bar
  .side-bar__user-name
    .side-bar__user-name__title
      .side-bar__user-name__title__name
        = current_user.name
      .side-bar__user-name__title__icon
        = link_to new_group_path , class: "side-bar__user-name__title__icon--edit" do
          = icon('far', 'edit',  class: "side-bar__user-name__title__icon")
        =link_to edit_user_path(current_user) , class: "side-bar__user-name__title__icon--cog" do
          = icon('fas', 'cog',  class: "side-bar__user-name__title__icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message